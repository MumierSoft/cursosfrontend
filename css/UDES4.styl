gris_oscuro=#444
naranja=#DD4F24
azul=#22BCE0


a 
	color red
	font-size 20px

body
	background #E8E8E8 
	color gris_oscuro
	font-family Arial 
	font-size 16px
	-webkit-transition font-size 1s
	-moz-transition font-size 1s
	-ms-transition font-size 1s
	-o-transition font-size 1s
	transition font-size 1s

footer
	background naranja
	border-radius 2em
	padding 1em 0
	text-align center
	
header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(2,2,2,0.2)
	border-radius 2em
	color white
	padding 0.5em

	position relative

.logo
	border-right 1px solid azul
	float left
	width 60px

.titular
	margin 0 80px 0 70px

nav 
	font-size 25px
	background #000000
	border-radius 1em

li
	display inline-block
	align center
